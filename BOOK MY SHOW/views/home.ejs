    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
      }
      .header {
        background-color: #333;
        color: white;
        padding: 10px 0;
      }
      .header .logo img {
        max-height: 50px;
      }
      .header .search input {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
      }
      .header .extra a {
        background-color: #007bff;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
      }
      .nav {
        background-color: #444;
        color: white;
      }
      .nav a {
        color: white;
        text-decoration: none;
        padding: 10px 20px;
      }
      .slider {
        position: relative;
        overflow: hidden;
        max-width: 100%;
        margin: 20px 0;
      }
      .slides {
        display: flex;
        transition: transform 0.5s ease-in-out;
      }
      .slide img {
        width: 100%;
        border-radius: 10px;
      }
      .prev, .next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
      }
      .prev {
        left: 10px;
      }
      .next {
        right: 10px;
      }
      .product .pro {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s;
      }
      .product .pro:hover {
        transform: translateY(-10px);
      }
      .product .pro .img img {
        border-radius: 10px 10px 0 0;
      }
      .content .movieBox .co {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s;
      }
      .content .movieBox .co:hover {
        transform: translateY(-10px);
      }
      .content .movieBox .co .post img {
        border-radius: 10px 10px 0 0;
      }
      .content .movieBox .co .movieName, .content .movieBox .co .movieTitle {
        padding: 10px;
      }
      .content .movieBox .co .flex a button {
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <div class="header flex">
      <div
        class="logo h-[inherit] w-[20%] flex justify-end "
      >
        <img src="/public/img/logo.png" class="h-[100%]" alt="" />
      </div>
      <div
        class="search h-[inherit] w-[50%] flex items-center "
      >
     
          <div class="search-bar h-[60%] w-[100%] ms-3 ">
            <input
              type="text"
              placeholder="           Search For Movies, Events, Plays, Sports and Activities"
              class="h-[80%] w-[100%] ms-3 border border-grey-100"
            />
          </div>
      </div>
      <div class="extra h-[inherit] w-[30%]  flex items-center justify-center">
        <a href="/addpage" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          Add Movie
        </a>
      </div>
    </div>

    <div
      class="nav h-[40px] w-full bg-[rgb(245, 245, 245)] flex justify-between w-full "
      style="background-color: rgb(245,245,245);"
    >
      <div
        class="navs ms-[9.5%] h-[inherit] text-xl flex flex-row justify-evenly w-[30%] "
      >
        <a href="">Movies</a>
        <a href="">Streams</a>
        <a href="">Events</a>
        <a href="">Plays</a>
        <a href="">Sports</a>
        <a href="">Activities</a>
      </div>
      <div
        class="navs h-[inherit] w-[30%]  text-xl flex flex-row justify-evenly me-[10%]"
      >
        <a href="">ListYourShow</a>
        <a href="">Corporates</a>
        <a href="">Offers</a>
        <a href="">Gift Cards</a>
      </div>
    </div>

    <div class="slider">
      <div class="slides">
        <div class="slide">
          <img src="../public/img/slide1.jpg" alt="Poster 1" />
        </div>
        <div class="slide">
          <img src="../public/img/slide2.jpg" alt="Poster 2" />
        </div>
      </div>
      <button class="prev" onclick="moveSlide(-1)">&#10094;</button>
      <button class="next" onclick="moveSlide(1)">&#10095;</button>
    </div>

    <script>
      let currentSlide = 0;
      const slides = document.querySelector('.slides');
      const totalSlides = document.querySelectorAll('.slide').length;

      function moveSlide(direction) {
        currentSlide = (currentSlide + direction + totalSlides) % totalSlides;
        slides.style.transform = `translateX(-${currentSlide * 100}%)`;
      }

      setInterval(() => {
        moveSlide(1);
      }, 5000);
    </script>

